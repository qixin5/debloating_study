#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -e -f $INDIR/makefile-2a -i > $OUTDIR/o749 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o749
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o749
cd ..
rm -r -f sdir
