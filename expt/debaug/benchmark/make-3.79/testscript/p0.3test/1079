#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN --file $INDIR/makefile-3a --file $INDIR/makefile-3b > $OUTDIR/o1079 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o1079
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o1079
cd ..
rm -r -f sdir
