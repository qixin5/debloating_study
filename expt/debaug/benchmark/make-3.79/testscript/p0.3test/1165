#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir-cov1 ./sdir
export MAKEFILE="$INDIR/makefile-cov1"
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $MAKEFILE > $OUTDIR/o1165 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o1165
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cd ..
rm -r -f sdir
