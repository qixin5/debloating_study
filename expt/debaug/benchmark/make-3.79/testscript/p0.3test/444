#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $INDIR/makefile-2a -n -p > $OUTDIR/o444 2>&1
${DEBSTUDY_DIR}/expt/debaug/benchmark/make-3.79_template/testscript/util/rm-makestuff -p $OUTDIR/o444
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o444
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o444
cd ..
rm -r -f sdir
