#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -d -f $INDIR/makefile-1a -i -n -p -s -w > $OUTDIR/o502 2>&1
${DEBSTUDY_DIR}/expt/debaug/benchmark/make-3.79/testscript/util/rm-makestuff -a $OUTDIR/o502
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o502
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o502
cd ..
rm -r -f sdir
