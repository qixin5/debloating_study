#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $INDIR/makefile-1a -k -n > $OUTDIR/o624 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o624
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o624
cd ..
rm -r -f sdir
