#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -d -f $INDIR/makefile-1a -k -n > $OUTDIR/o207 2>&1
${DEBSTUDY_DIR}/expt/debaug/benchmark/make-3.79/testscript/util/rm-makestuff -d $OUTDIR/o207
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o207
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o207
cd ..
rm -r -f sdir
