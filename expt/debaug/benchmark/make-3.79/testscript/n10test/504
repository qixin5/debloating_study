#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir-tc8b ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -I ./headers > $OUTDIR/o504 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o504
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o504
cd ..
rm -r -f sdir
