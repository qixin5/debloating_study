#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir-other3 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -o $CURRDIR/sdir/hello.c > $OUTDIR/o986 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o986
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o986
cd ..
rm -r -f sdir
