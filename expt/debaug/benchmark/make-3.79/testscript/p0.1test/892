#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $INDIR/makefile-2a -i -s -w > $OUTDIR/o892 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o892
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o892
cd ..
rm -r -f sdir
