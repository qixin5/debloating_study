#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir-other0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -W badfile.c > $OUTDIR/o848 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o848
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cd ..
rm -r -f sdir
