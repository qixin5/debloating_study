#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir-tc8a ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -I ./include > $OUTDIR/o1039 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o1039
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o1039
cd ..
rm -r -f sdir
