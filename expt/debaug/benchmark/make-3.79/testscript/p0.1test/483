#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/sdir-other2a ./sdir
timeout -k 9 ${TIMEOUT}s $BIN -C -f sdir $INDIR/Makefile-cov4 > $OUTDIR/o483 2>&1
${DEBAUG_DIR}/bin/makeoutputcleanup $OUTDIR/o483
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

rm -r -f sdir
