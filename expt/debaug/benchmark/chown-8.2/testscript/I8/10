#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4

uname=$(whoami)
uid=`id -u ${uname}`

cp $INDIR/file1 ./

{ timeout -k 9 ${TIMEOUT}s $BIN ${uid}:${uid} file1; } &>$OUTDIR/o10

echo "$?" >>$OUTDIR/o10
own0=`ls -al file1 | tr -s ' ' | cut -d ' ' -f 3`
own1=`ls -al file1 | tr -s ' ' | cut -d ' ' -f 4`
echo "${own0} ${own1}" >>$OUTDIR/o10

