#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4

uname=$(whoami)

cp $INDIR/while.c ./

{ timeout -k 9 ${TIMEOUT}s $BIN ${uname} while.c; } &>$OUTDIR/o0

echo "$?" >>$OUTDIR/o0
own0=`ls -al while.c | tr -s ' ' | cut -d ' ' -f 3`
own1=`ls -al while.c | tr -s ' ' | cut -d ' ' -f 4`
echo "${own0} ${own1}" >>$OUTDIR/o0
